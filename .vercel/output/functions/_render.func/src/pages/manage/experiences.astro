---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { getExperiences } from "../../lib/db";
import FormModal from "../../components/FormModal.astro";

const experiences = await getExperiences();
---

<DashboardLayout title="Manage Experiences" currentPage="experiences">
  <!-- Top Bar -->
  <div
    class="bg-white border-b border-gray-200 px-8 py-4 sticky top-0 z-10 flex items-center justify-between"
  >
    <div>
      <h2 class="text-3xl font-bold text-gray-900">Manage Experiences</h2>
      <p class="text-sm text-gray-500 mt-1">
        Organize and manage your work experiences.
      </p>
    </div>
    <button
      onclick="openModal('experienceModal')"
      class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700"
    >
      + Add Experience
    </button>
  </div>

  <!-- Alert Messages -->
  <div
    id="successAlert"
    class="hidden mx-8 mt-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800"
  >
    <p id="successMessage"></p>
  </div>
  <div
    id="errorAlert"
    class="hidden mx-8 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800"
  >
    <p id="errorMessage"></p>
  </div>

  <!-- Page Content -->
  <div class="p-8">
    {
      experiences.length > 0 ? (
        <div class="space-y-4">
          {experiences.map((exp) => (
            <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900">
                    {exp.position}
                  </h3>
                  <p class="text-sm text-gray-600 mt-1">
                    <a
                      href={exp.company_url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-600 hover:underline"
                    >
                      {exp.company}
                    </a>
                  </p>
                  <p class="text-sm text-gray-500 mt-1">
                    {exp.start_date} - {exp.end_date || "Present"}
                  </p>
                  <div class="mt-3 flex flex-wrap gap-2">
                    {exp.technologies &&
                      Array.isArray(exp.technologies) &&
                      exp.technologies.map((tech: string) => (
                        <span class="px-2 py-1 bg-purple-100 text-purple-800 text-xs rounded-full">
                          {tech}
                        </span>
                      ))}
                  </div>
                </div>
                <div class="flex gap-2 ml-4">
                  <button
                    onclick={`editExperience(${JSON.stringify(exp)})`}
                    class="p-2 text-gray-600 hover:bg-gray-100 rounded"
                    title="Edit"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  </button>
                  <button
                    onclick={`deleteExperience(${exp.id})`}
                    class="p-2 text-red-600 hover:bg-red-50 rounded"
                    title="Delete"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 mb-4">
            No experiences added yet.
          </p>
          <button
            onclick="openModal('experienceModal')"
            class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700"
          >
            Add First Experience
          </button>
        </div>
      )
    }

    <!-- Footer -->
    <div class="mt-8 text-center text-sm text-gray-500">
      <p>Â© 2026 Portfolio Dashboard. All rights reserved.</p>
    </div>
  </div>

  <!-- Form Modal -->
  <FormModal
    id="experienceModal"
    title="Manage Experience"
    fields={[
      {
        name: "company",
        label: "Company Name",
        type: "text",
        required: true,
      },
      {
        name: "company_url",
        label: "Company URL",
        type: "url",
        placeholder: "https://...",
      },
      { name: "position", label: "Position", type: "text", required: true },
      {
        name: "type",
        label: "Job Type",
        type: "select",
        required: true,
        options: [
          { value: "full-time", label: "Full Time" },
          { value: "part-time", label: "Part Time" },
          { value: "freelance", label: "Freelance" },
          { value: "internship", label: "Internship" },
        ],
      },
      {
        name: "start_date",
        label: "Start Date",
        type: "date",
        required: true,
      },
      { name: "end_date", label: "End Date", type: "date" },
      {
        name: "technologies",
        label: "Technologies (separate with comma)",
        type: "textarea",
        placeholder: "React, Node.js, PostgreSQL",
      },
    ]}
    submitText="Save Experience"
    onSubmit="submitExperienceForm"
  />
</DashboardLayout>

<script>
  function showAlert(type: "success" | "error", message: string) {
    const successAlert = document.getElementById("successAlert");
    const errorAlert = document.getElementById("errorAlert");
    const successMsg = document.getElementById("successMessage");
    const errorMsg = document.getElementById("errorMessage");

    if (type === "success") {
      successMsg!.textContent = message;
      successAlert!.classList.remove("hidden");
      errorAlert!.classList.add("hidden");
      setTimeout(() => successAlert!.classList.add("hidden"), 3000);
    } else {
      errorMsg!.textContent = message;
      errorAlert!.classList.remove("hidden");
      successAlert!.classList.add("hidden");
      setTimeout(() => errorAlert!.classList.add("hidden"), 3000);
    }
  }

  window.editExperience = (exp: any) => {
    const form = document.getElementById(
      "experienceModal-form",
    ) as HTMLFormElement;
    (form.elements.namedItem("company") as HTMLInputElement).value =
      exp.company;
    (form.elements.namedItem("company_url") as HTMLInputElement).value =
      exp.company_url || "";
    (form.elements.namedItem("position") as HTMLInputElement).value =
      exp.position;
    (form.elements.namedItem("type") as HTMLInputElement).value =
      exp.type || "";
    (form.elements.namedItem("start_date") as HTMLInputElement).value =
      exp.start_date;
    (form.elements.namedItem("end_date") as HTMLInputElement).value =
      exp.end_date || "";
    (form.elements.namedItem("technologies") as HTMLInputElement).value =
      Array.isArray(exp.technologies) ? exp.technologies.join(", ") : "";
    (form.elements.namedItem("id") as HTMLInputElement).value = exp.id;

    const modal = document.querySelector(
      "#experienceModal .modal-title",
    ) as HTMLElement;
    modal.textContent = `Edit ${exp.position}`;

    window.openModal("experienceModal");
  };

  window.deleteExperience = async (id: number) => {
    if (!confirm("Are you sure you want to delete this experience?")) return;

    try {
      const response = await fetch(`/api/experiences?id=${id}`, {
        method: "DELETE",
      });

      if (response.ok) {
        showAlert("success", "Experience deleted successfully!");
        setTimeout(() => location.reload(), 1000);
      } else {
        showAlert("error", "Failed to delete experience");
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  window.submitExperienceForm = async (modalId: string) => {
    const form = document.getElementById(`${modalId}-form`) as HTMLFormElement;
    const formData = new FormData(form);
    const id = formData.get("id");
    const data = {
      company: formData.get("company"),
      company_url: formData.get("company_url") || null,
      position: formData.get("position"),
      type: formData.get("type") || null,
      start_date: formData.get("start_date"),
      end_date: formData.get("end_date") || null,
      technologies:
        (formData.get("technologies") as string)
          ?.split(",")
          .map((t) => t.trim())
          .filter(Boolean) || [],
    };

    try {
      const method = id ? "PUT" : "POST";
      const url = id ? `/api/experiences?id=${id}` : "/api/experiences";

      const response = await fetch(url, {
        method,
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        showAlert(
          "success",
          `Experience ${id ? "updated" : "added"} successfully!`,
        );
        window.closeModal(modalId);
        form.reset();
        setTimeout(() => location.reload(), 1000);
      } else {
        const error = await response.text();
        showAlert("error", `Error: ${error}`);
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  const experienceModal = document.getElementById(
    "experienceModal",
  ) as HTMLElement;

  const observer = new MutationObserver(() => {
    if (!experienceModal.classList.contains("hidden")) {
      const form = document.getElementById(
        "experienceModal-form",
      ) as HTMLFormElement;
      const idField = form.elements.namedItem("id") as HTMLInputElement;
      if (!idField?.value) {
        const modal = document.querySelector(
          "#experienceModal .modal-title",
        ) as HTMLElement;
        modal.textContent = "Add New Experience";
      }
    }
  });

  observer.observe(experienceModal, {
    attributes: true,
    attributeFilter: ["class"],
  });
</script>
