---
import Layout from "../../layouts/Layout.astro";
import { getProjects } from "../../lib/db";
import FormModal from "../../components/FormModal.astro";

const projects = await getProjects();
---

<Layout title="Kelola Proyek">
  <div class="min-h-screen bg-gray-50">
    <!-- Sidebar -->
    <div
      class="fixed left-0 top-0 w-64 h-screen bg-white border-r border-gray-200 p-6 shadow-sm overflow-y-auto"
    >
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Portfolio</h1>
        <p class="text-sm text-gray-500">Content Manager</p>
      </div>

      <nav class="space-y-2">
        <a
          href="/dashboard"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4"
            ></path>
          </svg>
          Dashboard
        </a>
        <a
          href="/content"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          Konten
        </a>
        <a
          href="/media"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          Media
        </a>
        <a
          href="/manage/projects"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5A2.25 2.25 0 008.25 22.5h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-4 0v3m4-3v3m0 6H6m12 0H6"
            ></path>
          </svg>
          Proyek
        </a>
        <a
          href="/manage/experiences"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
            ></path>
          </svg>
          Pengalaman
        </a>
        <a
          href="/manage/education"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C6.5 6.253 2 10.998 2 17.25c0 5.4 3.578 10.063 8.667 11.386.537.093 1.093.149 1.663.149.57 0 1.126-.056 1.663-.149 5.089-1.323 8.667-5.986 8.667-11.386 0-6.252-4.5-10.997-10-10.997z"
            ></path>
          </svg>
          Pendidikan
        </a>
        <a
          href="/manage/certifications"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
            ></path>
          </svg>
          Sertifikasi
        </a>
        <a
          href="/manage/skills"
          class="flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg"
        >
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Skills
        </a>
      </nav>

      <div class="absolute bottom-6 left-6 right-6">
        <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-100">
          <img
            src="https://ui-avatars.com/api/?name=Admin+User"
            alt="Avatar"
            class="w-10 h-10 rounded-full"
          />
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Admin</p>
            <p class="text-xs text-gray-500">admin@portfolio.com</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="ml-64">
      <!-- Top Bar -->
      <div
        class="bg-white border-b border-gray-200 px-8 py-4 sticky top-0 z-10 flex items-center justify-between"
      >
        <div>
          <h2 class="text-3xl font-bold text-gray-900">Kelola Proyek</h2>
          <p class="text-sm text-gray-500 mt-1">
            Atur dan kelola semua proyek Anda.
          </p>
        </div>
        <button
          onclick="openModal('projectModal')"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700"
        >
          + Tambah Proyek
        </button>
      </div>

      <!-- Alert Messages -->
      <div
        id="successAlert"
        class="hidden mx-8 mt-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800"
      >
        <p id="successMessage"></p>
      </div>
      <div
        id="errorAlert"
        class="hidden mx-8 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800"
      >
        <p id="errorMessage"></p>
      </div>

      <!-- Page Content -->
      <div class="p-8">
        {
          projects.length > 0 ? (
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
              <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">
                      Nama Proyek
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">
                      Tanggal
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">
                      Teknologi
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">
                      Aksi
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  {projects.map((project) => (
                    <tr class="hover:bg-gray-50 transition">
                      <td class="px-6 py-4">
                        <div>
                          <h3 class="font-medium text-gray-900">
                            {project.name}
                          </h3>
                          {project.link && (
                            <a
                              href={project.link}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-sm text-blue-600 hover:underline"
                            >
                              Kunjungi
                            </a>
                          )}
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-600">
                        {project.date}
                      </td>
                      <td class="px-6 py-4 text-sm">
                        <div class="flex gap-1 flex-wrap">
                          {project.technos &&
                            Array.isArray(project.technos) &&
                            project.technos.map((tech: string) => (
                              <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                                {tech}
                              </span>
                            ))}
                        </div>
                      </td>
                      <td class="px-6 py-4">
                        <div class="flex gap-2">
                          <button
                            onclick={`editProject(${JSON.stringify(project)})`}
                            class="p-2 text-gray-600 hover:bg-gray-100 rounded"
                            title="Edit"
                          >
                            <svg
                              class="w-4 h-4"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                              />
                            </svg>
                          </button>
                          <button
                            onclick={`deleteProject(${project.id})`}
                            class="p-2 text-red-600 hover:bg-red-50 rounded"
                            title="Hapus"
                          >
                            <svg
                              class="w-4 h-4"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                              />
                            </svg>
                          </button>
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          ) : (
            <div class="text-center py-12">
              <p class="text-gray-500 mb-4">
                Belum ada proyek yang ditambahkan.
              </p>
              <button
                onclick="openModal('projectModal')"
                class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700"
              >
                Tambah Proyek Pertama
              </button>
            </div>
          )
        }

        <!-- Footer -->
        <div class="mt-8 text-center text-sm text-gray-500">
          <p>Â© 2026 Portfolio Dashboard. Semua hak dilindungi.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Modal -->
  <FormModal
    id="projectModal"
    title="Kelola Proyek"
    fields={[
      {
        name: "name",
        label: "Nama Proyek",
        type: "text",
        required: true,
        placeholder: "e.g., Portfolio Website",
      },
      { name: "date", label: "Tanggal", type: "date", required: true },
      {
        name: "link",
        label: "URL Proyek",
        type: "url",
        placeholder: "https://...",
      },
      {
        name: "repo_link",
        label: "Repository Link",
        type: "url",
        placeholder: "https://github.com/...",
      },
      {
        name: "image",
        label: "Nama File Gambar",
        type: "text",
        placeholder: "e.g., project.jpg",
      },
      {
        name: "technos",
        label: "Teknologi (pisahkan dengan koma)",
        type: "textarea",
        placeholder: "React, Node.js, PostgreSQL",
      },
      {
        name: "type",
        label: "Tipe Proyek (pisahkan dengan koma)",
        type: "textarea",
        placeholder: "Web App, Full Stack",
      },
    ]}
    submitText="Simpan Proyek"
    onSubmit="submitProjectForm"
  />
</Layout>

<script>
  function showAlert(type: "success" | "error", message: string) {
    const successAlert = document.getElementById("successAlert");
    const errorAlert = document.getElementById("errorAlert");
    const successMsg = document.getElementById("successMessage");
    const errorMsg = document.getElementById("errorMessage");

    if (type === "success") {
      successMsg!.textContent = message;
      successAlert!.classList.remove("hidden");
      errorAlert!.classList.add("hidden");
      setTimeout(() => successAlert!.classList.add("hidden"), 3000);
    } else {
      errorMsg!.textContent = message;
      errorAlert!.classList.remove("hidden");
      successAlert!.classList.add("hidden");
      setTimeout(() => errorAlert!.classList.add("hidden"), 3000);
    }
  }

  window.editProject = (project: any) => {
    const form = document.getElementById(
      "projectModal-form",
    ) as HTMLFormElement;
    (form.elements.namedItem("name") as HTMLInputElement).value = project.name;
    (form.elements.namedItem("date") as HTMLInputElement).value = project.date;
    (form.elements.namedItem("link") as HTMLInputElement).value =
      project.link || "";
    (form.elements.namedItem("repo_link") as HTMLInputElement).value =
      project.repo_link || "";
    (form.elements.namedItem("image") as HTMLInputElement).value =
      project.image || "";
    (form.elements.namedItem("technos") as HTMLInputElement).value =
      Array.isArray(project.technos) ? project.technos.join(", ") : "";
    (form.elements.namedItem("type") as HTMLInputElement).value = Array.isArray(
      project.type,
    )
      ? project.type.join(", ")
      : "";
    (form.elements.namedItem("id") as HTMLInputElement).value = project.id;

    const modal = document.querySelector(
      "#projectModal .modal-title",
    ) as HTMLElement;
    modal.textContent = `Edit ${project.name}`;

    window.openModal("projectModal");
  };

  window.deleteProject = async (id: number) => {
    if (!confirm("Yakin ingin menghapus proyek ini?")) return;

    try {
      const response = await fetch(`/api/projects?id=${id}`, {
        method: "DELETE",
      });

      if (response.ok) {
        showAlert("success", "Proyek berhasil dihapus!");
        setTimeout(() => location.reload(), 1000);
      } else {
        showAlert("error", "Gagal menghapus proyek");
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  window.submitProjectForm = async (modalId: string) => {
    const form = document.getElementById(`${modalId}-form`) as HTMLFormElement;
    const formData = new FormData(form);
    const id = formData.get("id");
    const data = {
      name: formData.get("name"),
      date: formData.get("date"),
      link: formData.get("link") || null,
      repo_link: formData.get("repo_link") || null,
      image: formData.get("image") || null,
      technos:
        (formData.get("technos") as string)
          ?.split(",")
          .map((t) => t.trim())
          .filter(Boolean) || [],
      type:
        (formData.get("type") as string)
          ?.split(",")
          .map((t) => t.trim())
          .filter(Boolean) || [],
    };

    try {
      const method = id ? "PUT" : "POST";
      const url = id ? `/api/projects?id=${id}` : "/api/projects";

      const response = await fetch(url, {
        method,
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        showAlert(
          "success",
          `Proyek ${id ? "diperbarui" : "ditambahkan"} berhasil!`,
        );
        window.closeModal(modalId);
        form.reset();
        setTimeout(() => location.reload(), 1000);
      } else {
        const error = await response.text();
        showAlert("error", `Error: ${error}`);
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  // Reset modal title when opening for new project
  const projectModal = document.getElementById("projectModal") as HTMLElement;

  const observer = new MutationObserver(() => {
    if (!projectModal.classList.contains("hidden")) {
      const form = document.getElementById(
        "projectModal-form",
      ) as HTMLFormElement;
      const idField = form.elements.namedItem("id") as HTMLInputElement;
      if (!idField?.value) {
        const modal = document.querySelector(
          "#projectModal .modal-title",
        ) as HTMLElement;
        modal.textContent = "Tambah Proyek Baru";
      }
    }
  });

  observer.observe(projectModal, {
    attributes: true,
    attributeFilter: ["class"],
  });
</script>
