  <!-- Form Modal -->
  <FormModal
    id="skillModal"
    title="Kelola Skill"
    fields={[
      {
        name: "title",
        label: "Nama Skill",
        type: "text",
        required: true,
        placeholder: "e.g., React",
      },
      {
        name: "type",
        label: "Tipe",
        type: "select",
        required: true,
        options: [
          { value: "frontend", label: "Frontend" },
          { value: "backend", label: "Backend" },
          { value: "database", label: "Database" },
          { value: "tools", label: "Tools" },
        ],
      },
      {
        name: "url",
        label: "URL Dokumentasi",
        type: "url",
        placeholder: "https://...",
      },
      {
        name: "icon",
        label: "Icon URL",
        type: "url",
        placeholder: "https://...",
      },
    ]}
    submitText="Simpan Skill"
    onSubmit="submitSkillForm"
  />
</Layout>

<script>
  function showAlert(type: "success" | "error", message: string) {
    const successAlert = document.getElementById("successAlert");
    const errorAlert = document.getElementById("errorAlert");
    const successMsg = document.getElementById("successMessage");
    const errorMsg = document.getElementById("errorMessage");

    if (type === "success") {
      successMsg!.textContent = message;
      successAlert!.classList.remove("hidden");
      errorAlert!.classList.add("hidden");
      setTimeout(() => successAlert!.classList.add("hidden"), 3000);
    } else {
      errorMsg!.textContent = message;
      errorAlert!.classList.remove("hidden");
      successAlert!.classList.add("hidden");
      setTimeout(() => errorAlert!.classList.add("hidden"), 3000);
    }
  }

  window.editSkill = (skill: any) => {
    const form = document.getElementById("skillModal-form") as HTMLFormElement;
    (form.elements.namedItem("title") as HTMLInputElement).value = skill.title;
    (form.elements.namedItem("type") as HTMLSelectElement).value = skill.type;
    (form.elements.namedItem("url") as HTMLInputElement).value =
      skill.url || "";
    (form.elements.namedItem("icon") as HTMLInputElement).value =
      skill.icon || "";
    (form.elements.namedItem("id") as HTMLInputElement).value = skill.id;

    const modal = document.querySelector(
      "#skillModal .modal-title",
    ) as HTMLElement;
    modal.textContent = `Edit ${skill.title}`;

    window.openModal("skillModal");
  };

  window.deleteSkill = async (id: number) => {
    if (!confirm("Yakin ingin menghapus skill ini?")) return;

    try {
      const response = await fetch(`/api/skills?id=${id}`, {
        method: "DELETE",
      });

      if (response.ok) {
        showAlert("success", "Skill berhasil dihapus!");
        setTimeout(() => location.reload(), 1000);
      } else {
        showAlert("error", "Gagal menghapus skill");
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  window.submitSkillForm = async (modalId: string) => {
    const form = document.getElementById(`${modalId}-form`) as HTMLFormElement;
    const formData = new FormData(form);
    const id = formData.get("id");
    const data = {
      title: formData.get("title"),
      type: formData.get("type"),
      url: formData.get("url") || null,
      icon: formData.get("icon") || null,
    };

    try {
      const method = id ? "PUT" : "POST";
      const url = id ? `/api/skills?id=${id}` : "/api/skills";

      const response = await fetch(url, {
        method,
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        showAlert(
          "success",
          `Skill ${id ? "diperbarui" : "ditambahkan"} berhasil!`,
        );
        window.closeModal(modalId);
        form.reset();
        setTimeout(() => location.reload(), 1000);
      } else {
        const error = await response.text();
        showAlert("error", `Error: ${error}`);
      }
    } catch (error) {
      showAlert("error", "Error: " + (error as Error).message);
    }
  };

  // Reset modal title when opening for new skill
  const skillModal = document.getElementById("skillModal") as HTMLElement;

  const observer = new MutationObserver(() => {
    if (!skillModal.classList.contains("hidden")) {
      const form = document.getElementById(
        "skillModal-form",
      ) as HTMLFormElement;
      const idField = form.elements.namedItem("id") as HTMLInputElement;
      if (!idField?.value) {
        const modal = document.querySelector(
          "#skillModal .modal-title",
        ) as HTMLElement;
        modal.textContent = "Tambah Skill Baru";
      }
    }
  });

  observer.observe(skillModal, {
    attributes: true,
    attributeFilter: ["class"],
  });
</script>
